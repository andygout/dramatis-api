{
  "name": "theatrebase-api",
  "version": "0.0.0",
  "description": "Graph database-driven API for site of theatrical productions, playtexts, and associated data.",
  "main": "src/app.js",
  "scripts": {
    "lint": "eslint --ext .js src/ test-int/ test-unit/",
    "lintspaces": "git ls-files | xargs lintspaces -e .editorconfig",
    "lint-check": "npm run lint && npm run lintspaces",
    "unit-test": "mocha --require @babel/register test-unit/mocha.env.js test-unit/**/*.test.js",
    "int-test-resources": "docker-compose -f ./docker/docker-compose.yml up",
    "int-test": "mocha --require @babel/register test-int/mocha.env.js test-int/**/*.test.js",
    "build": "babel src --out-dir built",
    "watch": "babel src --watch --out-dir built",
    "start": "node built/setup.js && npm run watch & nodemon built/app.js"
  },
  "pre-commit": [
    "lint-check",
    "unit-test"
  ],
  "author": "https://github.com/andygout",
  "license": "MS-RSL",
  "dependencies": {
    "directly": "^2.0.4",
    "dotenv": "^2.0.0",
    "express": "^4.17.1",
    "morgan": "^1.5.1",
    "neo4j-driver": "^4.0.2",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "chai": "^3.5.0",
    "chai-http": "^4.3.0",
    "eslint": "^4.11.0",
    "lintspaces-cli": "^0.6.0",
    "mocha": "^3.2.0",
    "node-mocks-http": "^1.6.6",
    "nodemon": "^1.11.0",
    "pre-commit": "^1.2.2",
    "proxyquire": "^1.7.10",
    "sinon": "^7.4.1"
  },
  "engines": {
    "node": "14.5.0",
    "npm": "6.14.5"
  }
}
